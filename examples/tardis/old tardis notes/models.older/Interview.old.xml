<?xml version="1.0"?>
<taskModel about="urn:fr.telecom-paristech:models:Interview"
	   xmlns="http://www.cs.wpi.edu/~rich/cetask/cea-2018-ext"
	   xmlns:m="urn:fr.telecom-paristech:models:MyModel"
	   >

  <!--This is a simple example of an interview start.
   Basic idea: 4 step plan of an _Opening, _Who_To_See, _Applicant_Name, _Interview_Person, _Closing.

Opening, Who_To_See, Applicant_Name, and Closing are just d4g trees.

   -->
<task id="Interview">
    <output name="interviewee" type="string"/>

    <subtasks id="how_to_interview">
      <step name="open" task="m:_Opening"/>
      <step name="who" task="m:_Who_To_See"/>
      <step name="name" task="m:_Applicant_Name"/>
      <step name="interview" task="_Interview_Person" />

<!--
      <step name="close" task="m:_Closing" />
   --> 
      <binding slot="$this.interviewee" value="interviewee"/>

    </subtasks>
  </task>

<task id="_Interview_Person">

    <subtasks id="actual_interview">
      <step name="greet" task="m:_Greet_Interviewee"/>
      <step name="resume" task="m:_Get_Resume"/>

<!--
      <step name="interests" task="_Learn_About_Interests"/>
      <step name="jobc" task="_Discuss_Job_Categories"/>
      <step name="train" task="_Discuss_Training"/>

-->
    </subtasks>
</task>

<!--Do I need to include inputs for interviewee and interviewer given that they are global?
   <input name="interviewee" type="string"/>
  <input name="interviewer" type="string"/>
-->

<task id="_Shake_Hands">
  <script> println("[Agent and User Shake Hands now]"); </script>
</task>

</taskModel>

