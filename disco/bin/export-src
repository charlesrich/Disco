#!/bin/bash
# 
# Usage: export-src [ <path> ]

# Create src.zip with disco and task sources in given path (defaults to /tmp)
#
ws="`dirname $0`/../.."
cd /tmp
rm -fR edu
svn export -q $ws/disco/java/edu edu
svn export -q $ws/task/java/edu/wpi/cetask edu/wpi/cetask
zip -qr src.zip edu
if [ "$1" ]; then
  cp -v /tmp/src.zip $1
fi
